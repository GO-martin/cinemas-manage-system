    = link_to destroy_modal_admin_cinema_path(cinema), data: { turbo_frame: "modal" }, class: "btn-delete inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-red-700 rounded-lg hover_bg-red-800 focus_ring-4 focus_ring-red-300 dark_focus_ring-red-900"
      = inline_svg_tag("svg/delete-icon.svg", class: "w-4 h-4 mr-2")
      | Delete 
      