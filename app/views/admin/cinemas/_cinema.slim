  td.p-4.text-base.font-medium.text-gray-900.whitespace-nowrap.dark_text-white
    = cinema.name 
  td.p-4.text-base.font-medium.text-gray-900.whitespace-nowrap.dark_text-white
    = cinema.id 
  td.p-4.text-base.font-medium.text-gray-900.whitespace-nowrap.dark_text-white
    = cinema&.location&.name
